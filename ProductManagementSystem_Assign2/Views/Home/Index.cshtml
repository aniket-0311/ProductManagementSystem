
@{
    Layout = "_CustomLayout";
    ViewData["Title"] = "Home Page";
}

<style>
    .background {
        background-image: url("https://wallpaperaccess.com/full/1944977.jpg");
        height: 100vh;
        z-index: 20;
        background-color: #000000;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-bottom: 6rem;
    }

    h1 {
        font-size: 6vw; 
        font-weight: bold;
        background: -webkit-linear-gradient(to right, #E2E2E2, #C9D6FF);
        background: linear-gradient(to right, #E2E2E2, #C9D6FF);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: 4.5vw; 
        line-height: 1.2;
    }

    p {
        font-size: 2vw; 
        background: -webkit-linear-gradient(to right, #E2E2E2, #C9D6FF);
        background: linear-gradient(to right, #E2E2E2, #C9D6FF);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: 0.8vw; 
    }

    #getBtn {
        font-size: 2vw; 
        border-radius: 7px;
    }

    @@ media screen and (max-width: 768px) {
        h1 {
            font-size: 8vw; 
            letter-spacing: 0.8vw; 
        }

        p {
            font-size: 3vw; 
            letter-spacing: 0.3vw; 
        }

        #getBtn {
            font-size: 4vw; 
        }
    }
</style>





<div class="background">
    <div class="content">
        <h1 class="heading">WELCOME</h1>
        <p class="subheading">TO PRODUCT STORE! </p>
        <a class="btn btn-primary" id="getBtn" asp-action="List" asp-controller="Product">
            Get Started
        </a>
    </div>
</div>



@section scripts {
    @await Html.PartialAsync("_NotificationScript")
}
