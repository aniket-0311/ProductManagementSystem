@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/customLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductManagementSystem_Assign2.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="data:image/jpeg;base64," alt="Bootstrap" width="30" height="24">

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 px-4">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="List">List</a>
                            </li>
                        }
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="Add">Add Products</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="SuperAdmin" asp-action="List">UserList</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <div class="me-3 text-light">
                                @User?.Identity?.Name
                            </div>

                            <a class=" btn btn-danger bg-gradient me-3 text-dark"
                               asp-area=""
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a class=" btn btn-info bg-gradient me-3 text-dark"
                               asp-area=""
                               asp-controller="Account"
                               asp-action="Register">
                                Register
                            </a>



                            <a class=" btn btn-info bg-gradient me-3 text-dark"
                               asp-area=""
                               asp-controller="Account"
                               asp-action="Login">
                                Login
                            </a>
                        }

                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- Notification placeholder -->
    <div id="notification-container" class="notification-container">
        <!-- Notifications will be inserted here -->
    </div>

    @*<div class="container">*@
    <main role="main" class="main-body">
        @RenderBody()
    </main>
    @*</div>*@

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2023 - ProductManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
