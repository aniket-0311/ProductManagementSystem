@model ProductManagementSystem_Assign2.Models.ViewModel.AddProductRequest;
@{
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h1 class="text-center">Add Product</h1>
                    <div class="card-body">
                        <form method="post" asp-action="Add">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" asp-for="Name" required />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <input type="text" class="form-control" asp-for="Category" />
                                <span class="text-danger" asp-validation-for="Category"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Price</label>
                                <input type="number" class="form-control" asp-for="Price" />
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Image Upload</label>
                                <input type="file" class="form-control" id="featuredImageUpload" required />

                                <image src="" id="featuredImageDisplay" style="display:none;width:100%;margin-top:2px" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">ImageUrl</label>
                                <input type="text" class="form-control" id="featuredImageUrl" asp-for="ImageUrl" readonly />
                            </div>
                            <div class="mb-3 text-center">
                                <button type="submit" class="btn btn-dark">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ImageUploadScript")
    @await Html.PartialAsync("_NotificationScript")
}
